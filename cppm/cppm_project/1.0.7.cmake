macro(_cppm_project)
    cmake_parse_arguments(ARG "" "VERSION;DESCRIPTION" "" ${ARGN})
    list(GET ARG_UNPARSED_ARGUMENTS 0 _name)
    set(CPPM_PROJECT_NAME ${_name})
    set(CPPM_PROJECT_VERSION ${ARG_VERSION})
    set(CPPM_PROJECT_DESCRIPTION ${ARG_DESCRIPTION})
    project(${CPPM_PROJECT_NAME} VERSION ${CPPM_PROJECT_VERSION} LANGUAGES C CXX)
endmacro()
